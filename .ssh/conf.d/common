Host *
	ServerAliveInterval 30
	ServerAliveCountMax 3
	TCPKeepAlive yes

Match Host * Exec "[ $(uname -o) = 'Linux' ] && [ -e $HOME/.1password/agent.sock ]"
	IdentityAgent "~/.1password/agent.sock"

Match Host * Exec "[ $(uname -o) = 'Darwin' ] && [ -e $HOME/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock ]"
	IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
